
<%= form_for([@project, @project.comments.build] ) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.label :body, "コメント" %><br />
        <%= f.text_area :body, cols: 60, rows: 8, class: "form-control" %><br/>
        
    </div>
        <%= f.submit "コメントする", class: "btn btn-primary" %>
<% end %>