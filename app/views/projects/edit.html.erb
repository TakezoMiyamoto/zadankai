<h1 style="text-align: center;">プロジェクト編集</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@project) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
          <%= f.label :category %>
          <%= f.select :category,
                  ["ファッション","ダンス","演劇","テクノロジー"], { include_blank: '選択してください'} , class: "form-control" %></br>
                  
          <%= f.label :brand_name, "ブランド名" %>
          <%= f.text_field :brand_name, class: "form-control" %><br/>
          
          <%= f.label :project_name, "プロジェクト名" %>
          <%= f.text_field :project_name, class: "form-control" %>
          
          <%= f.label :period_date, "プロジェクト終了予定日" %>
          <div class='input-group date datepicker'>
          <%= f.text_field :period_date, :placeholder => "(例)2015-01-01-12:00", class: 'form-control datepicker' %>
          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
          </div><br/>
    
          <%= f.label :main_image, "メイン画像" %>
          <%= f.file_field :main_image, class: "form-control" %>
    
          <%= f.label :youtube_url, "Youtube動画 URL" %>
          <%= f.text_field :youtube_url, :placeholder => "https://www.youtube.com/watch?v=xxxxxxxxxxx" ,class: "form-control" %></br>
          
          <%= f.label :description, class: 'control-label' %>
          <%= f.cktext_area :description, class: 'form-control' %></br>
          <%= f.submit "プロジェクト情報の更新!", class: "btn btn-large btn-primary form-control" %>
          
      <% end %>
    </div>
        
</div>